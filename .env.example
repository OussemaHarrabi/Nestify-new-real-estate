# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nestify
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/nestify

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nestify_users
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://nestify.tn

# File Upload
MAX_FILE_SIZE=5242880

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# API Documentation
SWAGGER_ENABLED=true
API_DOCS_PATH=/api/docs

# Email Configuration (for future use)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

# SMS Configuration (for future use)
SMS_API_KEY=
SMS_SENDER=

# Redis Configuration (for future caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring
SENTRY_DSN=

# Application URLs
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000